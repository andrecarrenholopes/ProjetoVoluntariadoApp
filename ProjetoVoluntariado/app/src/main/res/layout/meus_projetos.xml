<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo1">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="Meus Projetos e Instituições"
        android:textColor="@android:color/black"
        android:textSize="30dp" />
    <!--
        <ListView
            android:id="@+id/listViewProjetos"
            android:choiceMode="singleChoice"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayoutInstituicaoCadastrada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView2"
                android:layout_marginBottom="17dp"
                android:layout_marginTop="17dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView2"
                    android:text="Instituição"
                    android:textColor="@android:color/black"
                    android:textSize="24sp" />

                <Spinner
                    android:id="@+id/spinnerInstituicao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView5"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/textViewInstituicaNome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView2"
                    android:layout_alignStart="@+id/textView2"
                    android:layout_below="@+id/spinnerInstituicao"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="20dp"
                    android:text="TextView"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/textViewInstituicaoDescricao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textViewInstituicaNome"
                    android:layout_alignStart="@+id/textViewInstituicaNome"
                    android:layout_below="@+id/textViewInstituicaNome"
                    android:layout_marginTop="20dp"
                    android:text="TextView"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/textViewInstituicaoRua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textViewInstituicaoDescricao"
                    android:layout_alignStart="@+id/textViewInstituicaoDescricao"
                    android:layout_below="@+id/textViewInstituicaoDescricao"
                    android:layout_marginTop="20dp"
                    android:text="TextView"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/textViewInstituicaoComplemento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textViewInstituicaoRua"
                    android:layout_alignStart="@+id/textViewInstituicaoRua"
                    android:layout_below="@+id/textViewInstituicaoRua"
                    android:layout_marginTop="20dp"
                    android:text="TextView"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/textViewInstituicaoBairro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textViewInstituicaoComplemento"
                    android:layout_alignStart="@+id/textViewInstituicaoComplemento"
                    android:layout_below="@+id/textViewInstituicaoComplemento"
                    android:layout_marginTop="20dp"
                    android:text="TextView"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/textViewInstituicaoEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textViewInstituicaoBairro"
                    android:layout_alignStart="@+id/textViewInstituicaoBairro"
                    android:layout_below="@+id/textViewInstituicaoBairro"
                    android:layout_marginTop="20dp"
                    android:text="TextView"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/textViewInstituicaoWebsite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textViewInstituicaoEmail"
                    android:layout_alignStart="@+id/textViewInstituicaoEmail"
                    android:layout_below="@+id/textViewInstituicaoEmail"
                    android:layout_marginTop="20dp"
                    android:text="TextView"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/textViewInstituicaoCidade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textViewInstituicaoWebsite"
                    android:layout_alignStart="@+id/textViewInstituicaoWebsite"
                    android:layout_below="@+id/textViewInstituicaoWebsite"
                    android:layout_marginTop="20dp"
                    android:text="TextView"
                    android:textColor="@android:color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView2"
                    android:layout_marginTop="20dp"
                    android:gravity="left"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/buttonAtualizaInstituicao"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_alignLeft="@+id/textViewInstituicaoCidade"
                        android:layout_alignStart="@+id/textViewInstituicaoCidade"
                        android:layout_below="@+id/textViewInstituicaoCidade"
                        android:background="@drawable/botaoregistro"
                        android:text="Atualizar Cadastro da Instituição" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView2"
                    android:layout_marginTop="20dp"
                    android:gravity="left"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/buttonDeleteInstituicao"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_alignLeft="@+id/buttonAtualizaInstituicao"
                        android:layout_alignStart="@+id/buttonAtualizaInstituicao"
                        android:layout_below="@+id/buttonAtualizaInstituicao"
                        android:background="@drawable/botaoapaga"
                        android:text="Apagar Cadastro da Instituição" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutProjetoMP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tituloProjeto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/buttonDeleteInstituicao"
                        android:layout_alignStart="@+id/buttonDeleteInstituicao"
                        android:layout_below="@+id/buttonDeleteInstituicao"
                        android:layout_marginLeft="12dp"
                        android:text="Projeto"
                        android:textColor="@android:color/black"
                        android:textSize="24sp" />

                    <Spinner
                        android:id="@+id/spinnerProjeto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/textViewInstituicaoCidade"
                        android:layout_alignStart="@+id/textViewInstituicaoCidade"
                        android:layout_below="@+id/tituloProjeto"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/buttonDeleteInstituicao"
                        android:layout_alignStart="@+id/buttonDeleteInstituicao"
                        android:layout_below="@+id/buttonDeleteInstituicao"
                        android:layout_marginTop="20dp"
                        android:text="Descriçao do Projeto"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/descricaoProjetoMP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/buttonDeleteInstituicao"
                        android:layout_alignStart="@+id/buttonDeleteInstituicao"
                        android:layout_below="@+id/buttonDeleteInstituicao"
                        android:layout_marginTop="20dp"
                        android:text="Descrição"
                        android:textColor="@android:color/black" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView2"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/buttonAtualizaProjeto"
                            android:layout_width="200dp"
                            android:layout_height="60dp"
                            android:layout_alignLeft="@+id/textViewInstituicaoCidade"
                            android:layout_alignStart="@+id/textViewInstituicaoCidade"
                            android:layout_below="@+id/textViewInstituicaoCidade"
                            android:background="@drawable/botaoregistro"
                            android:gravity="center_horizontal|center"
                            android:text="Atualizar Cadastro do projeto" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView2"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/buttonDeleteProjeto"
                            android:layout_width="200dp"
                            android:layout_height="60dp"
                            android:layout_alignLeft="@+id/buttonAtualizaInstituicao"
                            android:layout_alignStart="@+id/buttonAtualizaInstituicao"
                            android:layout_below="@+id/buttonAtualizaInstituicao"
                            android:background="@drawable/botaoapaga"
                            android:text="Apagar Cadastro do projeto" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayoutVagaMP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tituloVagaMP"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/buttonDeleteInstituicao"
                            android:layout_alignStart="@+id/buttonDeleteInstituicao"
                            android:layout_below="@+id/buttonDeleteInstituicao"
                            android:text="Vaga"
                            android:textColor="@android:color/black"
                            android:textSize="24sp" />

                        <Spinner
                            android:id="@+id/spinnerVagaMP"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/textViewInstituicaoCidade"
                            android:layout_alignStart="@+id/textViewInstituicaoCidade"
                            android:layout_below="@+id/tituloVagaMP"
                            android:layout_marginTop="10dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="20dp"
                            android:text="Id da Vaga: "
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/textViewIdMP"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:text="Id" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="20dp"
                            android:text="Nome da Vaga: "
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/textViewNomeMP"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:text="Nome" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="20dp"
                            android:text="Descrição da Vaga: "
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/textViewDescricaoMP"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:text="Descrição" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="20dp"
                            android:text="Pré-Requisitos da Vaga: "
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/textViewRequisitosMP"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:text="Requisitos" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="20dp"
                            android:text="Quantidade de Vagas: "
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/textViewQuantidadeMP"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:text="Quantidade" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="20dp"
                            android:text="Endereço: "
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/textViewRuaMP"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:text="Rua" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="20dp"
                            android:text="Complemento: "
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/textViewComplementoMP"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:text="Complemento" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="20dp"
                            android:text="Bairro: "
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/textViewBairroMP"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:text="Bairro" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="20dp"
                            android:text="Cidade: "
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/textViewCidadeMP"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:text="Cidade" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/textView2"
                            android:layout_marginTop="20dp"
                            android:gravity="right"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/buttonAtualizaVaga"
                                android:layout_width="200dp"
                                android:layout_height="60dp"
                                android:layout_alignLeft="@+id/textViewInstituicaoCidade"
                                android:layout_alignStart="@+id/textViewInstituicaoCidade"
                                android:layout_below="@+id/textViewInstituicaoCidade"
                                android:background="@drawable/botaoregistro"
                                android:text="Atualizar Cadastro da Vaga" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/textView2"
                            android:layout_marginTop="20dp"
                            android:gravity="right"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/buttonDeleteVaga"
                                android:layout_width="200dp"
                                android:layout_height="60dp"
                                android:layout_alignLeft="@+id/buttonAtualizaInstituicao"
                                android:layout_alignStart="@+id/buttonAtualizaInstituicao"
                                android:layout_below="@+id/buttonAtualizaInstituicao"
                                android:layout_marginBottom="50dp"
                                android:background="@drawable/botaoapaga"
                                android:text="Apagar Cadastro da Vaga" />
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textViewNenhumaVagaCadastrada"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Nenhum Projeto Cadastrado"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textViewNenhumProjetoCadastrado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Nenhum Projeto Cadastrado"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <TextView
                android:id="@+id/textViewNenhumaIntituicaoCadastrada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Nenhuma Instituição Cadastrada"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>