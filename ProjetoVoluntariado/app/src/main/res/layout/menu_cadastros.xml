<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo4">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="22dp"
        android:text="Cadastre suas ONGs e vagas"
        android:textColor="@android:color/background_dark"
        android:textSize="30dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonCadastraInstituicao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:layout_marginStart="47dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/cdtinst"
            android:onClick="onClick"
            android:paddingRight="70dp"
            android:text="Cadastra Instituição" />

        <Button
            android:id="@+id/buttonCadastraProjeto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:layout_marginStart="47dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/cdtprj"
            android:onClick="onClick"
            android:paddingRight="50dp"
            android:text="Cadastra projeto" />

        <Button
            android:id="@+id/buttonCadastraVagasDoProjeto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/textView2"
            android:layout_marginStart="47dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/cdtvagas"
            android:onClick="onClick"
            android:paddingRight="50dp"
            android:text="Cadastra vagas do projeto" />

    </LinearLayout>


</RelativeLayout>